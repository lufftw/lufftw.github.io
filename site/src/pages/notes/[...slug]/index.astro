---
import { type CollectionEntry, getCollection } from "astro:content";
import PostDetails from "@/layouts/PostDetails.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import { getPathFromEntry } from "@/utils/getPath";

export interface Props {
  post: CollectionEntry<"blog">;
}

export async function getStaticPaths() {
  const allPosts = await getCollection("blog", ({ data }) => !data.draft);
  const notes = allPosts.filter(({ data }) => data.type === "note");
  const noteResult = notes.map(note => ({
    params: { slug: getPathFromEntry(note, false) },
    props: { post: note },
  }));

  return noteResult;
}

const { post } = Astro.props;

const allPosts = await getCollection("blog");
const notes = allPosts.filter(({ data }) => data.type === "note");
const sortedNotes = getSortedPosts(notes);
---

<PostDetails post={post} posts={sortedNotes} />

