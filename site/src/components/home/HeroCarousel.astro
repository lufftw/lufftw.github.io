---
/**
 * HeroCarousel
 *
 * Featured-only hero carousel using horizontal scroll-snap.
 *
 * Features:
 * - Prev / Next buttons
 * - Dots indicator
 * - Slide counter (e.g. 1 / 5)
 * - Autoplay with pause-on-hover/focus and prefers-reduced-motion support
 *
 * Notes:
 * - Use scroller.scrollTo({ left }) instead of scrollIntoView()
 *   to avoid scrolling the whole page.
 */

import { getPathFromEntry } from "@/utils/getPath";

const { items } = Astro.props;

// Resolve hero image source from frontmatter
function coverOf(entry: any) {
  const ogImage = entry.data?.ogImage;
  if (!ogImage) return undefined;
  // Handle both string URLs and image objects
  return typeof ogImage === "string" ? ogImage : ogImage?.src;
}
---

<section class="mt-4" data-hero-root>
  <div class="carousel-container">
    <!-- Scrollable carousel container -->
    <div
      class="carousel-scroller"
      data-carousel
      aria-label="Featured posts carousel"
    >
      {items.map((entry: any, idx: number) => (
        <article
          class="carousel-slide"
          data-slide
          data-index={idx}
        >
          <a href={getPathFromEntry(entry)} class="block h-full w-full">
            {coverOf(entry) ? (
              idx === 0 ? (
                <img
                  src={coverOf(entry)}
                  alt={entry.data?.title ?? entry.slug}
                  class="h-full w-full object-cover"
                  loading="eager"
                />
              ) : (
                <img
                  src={coverOf(entry)}
                  alt={entry.data?.title ?? entry.slug}
                  class="h-full w-full object-cover"
                  loading="lazy"
                />
              )
            ) : (
              <div class="carousel-placeholder" />
            )}

            <!-- Gradient overlay -->
            <div class="carousel-gradient" />

            <!-- Text overlay -->
            <div class="carousel-text">
              <h2 class="carousel-title">
                {entry.data?.title ?? entry.slug}
              </h2>

              {entry.data?.datetime && (
                <div class="carousel-date">
                  {entry.data.datetime}
                </div>
              )}
            </div>
          </a>
        </article>
      ))}
    </div>

    <!-- Prev / Next controls -->
    <button
      class="carousel-btn carousel-btn-prev"
      data-prev
      aria-label="Previous slide"
      type="button"
    >
      ‹
    </button>

    <button
      class="carousel-btn carousel-btn-next"
      data-next
      aria-label="Next slide"
      type="button"
    >
      ›
    </button>

    <!-- Bottom bar: dots + counter -->
    <div class="carousel-controls">
      <!-- Dots -->
      <div class="carousel-dots" data-dots aria-label="Slide indicators">
        {items.map((_: any, idx: number) => (
          <button
            class="carousel-dot"
            data-dot
            data-dot-index={idx}
            aria-label={`Go to slide ${idx + 1}`}
            type="button"
          />
        ))}
      </div>

      <!-- Counter -->
      <div class="carousel-counter" data-counter>
        <span data-current>1</span> / <span data-total>{items.length}</span>
      </div>
    </div>
  </div>
</section>

<style>
  /* Container */
  /* Following AstroPaper standard: use CSS variables for theme-aware colors */
  .carousel-container {
    position: relative;
    overflow: hidden;
    border-radius: 1rem;
    border: 1px solid var(--border);
    overflow-anchor: none;
  }

  /* Scroller */
  .carousel-scroller {
    display: flex;
    scroll-snap-type: x mandatory;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    overflow-anchor: none;
  }
  .carousel-scroller::-webkit-scrollbar {
    display: none;
  }

  /* Slide */
  .carousel-slide {
    position: relative;
    height: 320px;
    width: 100%;
    flex: none;
    scroll-snap-align: start;
  }
  @media (min-width: 768px) {
    .carousel-slide {
      height: 420px;
    }
  }

  /* Placeholder */
  /* Use muted color variable for consistent theming */
  .carousel-placeholder {
    height: 100%;
    width: 100%;
    background-color: var(--muted);
  }

  /* Gradient overlay */
  .carousel-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.7),
      rgba(0, 0, 0, 0.2) 50%,
      transparent
    );
  }

  /* Text overlay */
  .carousel-text {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1.5rem;
    color: white;
  }

  .carousel-title {
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.375;
  }
  @media (min-width: 768px) {
    .carousel-title {
      font-size: 1.875rem;
    }
  }

  .carousel-date {
    margin-top: 0.5rem;
    font-size: 0.875rem;
    opacity: 0.9;
  }

  /* Navigation buttons */
  /* Use background and foreground variables for theme consistency */
  .carousel-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    border-radius: 9999px;
    background-color: rgba(255, 255, 255, 0.9);
    color: var(--foreground);
    padding: 0.5rem 0.75rem;
    font-size: 1.5rem;
    line-height: 1;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: all 0.2s;
    backdrop-filter: blur(4px);
  }
  .carousel-btn:hover {
    background-color: rgb(255, 255, 255);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }
  /* Dark mode: use background variable with opacity for consistency */
  html[data-theme="dark"] .carousel-btn {
    background-color: color-mix(in srgb, var(--background) 80%, transparent);
    color: var(--foreground);
  }
  html[data-theme="dark"] .carousel-btn:hover {
    background-color: color-mix(in srgb, var(--background) 95%, transparent);
  }

  .carousel-btn-prev {
    left: 0.75rem;
  }
  .carousel-btn-next {
    right: 0.75rem;
  }

  /* Controls container */
  .carousel-controls {
    position: absolute;
    bottom: 0.75rem;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  /* Dots */
  .carousel-dots {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .carousel-dot {
    height: 0.5rem;
    width: 0.5rem;
    border-radius: 9999px;
    background-color: rgba(255, 255, 255, 0.6);
    transition: all 0.2s;
  }
  .carousel-dot:hover {
    background-color: rgba(255, 255, 255, 0.8);
    transform: scale(1.1);
  }
  .carousel-dot.bg-white {
    background-color: rgb(255, 255, 255);
    width: 1.25rem;
  }

  /* Counter */
  /* Use semi-transparent black overlay that works in both themes */
  .carousel-counter {
    border-radius: 9999px;
    background-color: rgba(0, 0, 0, 0.4);
    padding: 0.25rem 0.75rem;
    font-size: 0.75rem;
    color: white;
    backdrop-filter: blur(8px);
  }
  /* Dark mode: slightly more opaque for better contrast */
  html[data-theme="dark"] .carousel-counter {
    background-color: rgba(0, 0, 0, 0.6);
  }
</style>

<script is:inline>
  /**
   * Carousel controller:
   * - Scroll by container width
   * - Track active slide via IntersectionObserver
   * - Sync dots and counter
   * - Autoplay with pause-on-hover/focus and prefers-reduced-motion support
   *
   * IMPORTANT:
   * - Avoid scrollIntoView() because it can scroll the whole page.
   * - Use scroller.scrollTo({ left }) to only move the carousel.
   */
  const root = document.querySelector("[data-hero-root]");
  const scroller = root?.querySelector("[data-carousel]");
  const prev = root?.querySelector("[data-prev]");
  const next = root?.querySelector("[data-next]");
  const slides = Array.from(root?.querySelectorAll("[data-slide]") ?? []);
  const dots = Array.from(root?.querySelectorAll("[data-dot]") ?? []);
  const currentEl = root?.querySelector("[data-current]");
  const totalEl = root?.querySelector("[data-total]");

  if (root && scroller && slides.length > 0) {
    const total = slides.length;
    if (totalEl) totalEl.textContent = String(total);

    let activeIndex = 0;

    const setActive = (index) => {
      activeIndex = index;
      if (currentEl) currentEl.textContent = String(index + 1);

      dots.forEach((dot, i) => {
        dot.classList.toggle("bg-white", i === index);
        dot.classList.toggle("bg-white/60", i !== index);
      });
    };

    const leftOfIndex = (index) => {
      const target = slides[index];
      if (!target) return null;
      return target.offsetLeft;
    };

    const scrollToIndex = (index) => {
      const left = leftOfIndex(index);
      if (left == null) return;
      scroller.scrollTo({ left, behavior: "smooth" });
    };

    const scrollByOne = (direction) => {
      const width = scroller.clientWidth;
      scroller.scrollBy({ left: direction * width, behavior: "smooth" });
    };

    prev?.addEventListener("click", () => scrollByOne(-1));
    next?.addEventListener("click", () => scrollByOne(1));

    dots.forEach((dot) => {
      dot.addEventListener("click", () => {
        const idx = Number(dot.getAttribute("data-dot-index"));
        if (!Number.isNaN(idx)) scrollToIndex(idx);
      });
    });

    const io = new IntersectionObserver(
      (entries) => {
        let best = null;
        for (const e of entries) {
          if (!best || e.intersectionRatio > best.intersectionRatio) best = e;
        }
        if (!best || !best.isIntersecting) return;

        const idx = Number(best.target.getAttribute("data-index"));
        if (!Number.isNaN(idx)) setActive(idx);
      },
      { root: scroller, threshold: [0.4, 0.6, 0.8] }
    );

    slides.forEach((s) => io.observe(s));

    // ---- Autoplay ---------------------------------------------------------
    const AUTOPLAY_MS = 6000;

    const prefersReducedMotion =
      window.matchMedia &&
      window.matchMedia("(prefers-reduced-motion: reduce)").matches;

    let timer = null;
    let paused = false;

    const stopAutoplay = () => {
      if (timer) {
        clearInterval(timer);
        timer = null;
      }
    };

    const startAutoplay = () => {
      if (prefersReducedMotion) return;
      if (timer) return;

      timer = setInterval(() => {
        if (paused) return;
        const nextIndex = (activeIndex + 1) % total;
        scrollToIndex(nextIndex);
      }, AUTOPLAY_MS);
    };

    const pause = () => { paused = true; };
    const resume = () => { paused = false; };

    root.addEventListener("mouseenter", pause);
    root.addEventListener("mouseleave", resume);
    root.addEventListener("focusin", pause);
    root.addEventListener("focusout", resume);

    root.addEventListener("touchstart", pause, { passive: true });
    root.addEventListener(
      "touchend",
      () => { setTimeout(resume, 800); },
      { passive: true }
    );

    if (total >= 2) startAutoplay();

    setActive(0);

    document.addEventListener(
      "astro:before-swap",
      () => {
        stopAutoplay();
        io.disconnect();
      },
      { once: true }
    );
  }
</script>