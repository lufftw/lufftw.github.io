---
/**
 * HeroCarousel - Clean Caption Bar Style
 *
 * Works for both artistic images AND content-rich images (diagrams, etc.)
 * - Image displays fully without text overlay interference
 * - Clean caption bar at bottom with solid background
 * - Large italic title, inline meta
 */

import CarouselSlide from "./CarouselSlide.astro";
import { initHeroCarousel } from "./HeroCarousel.client";

const { items } = Astro.props;
---

<section class="hero-section" data-hero-root>
  <div class="carousel-container">
    <div class="carousel-scroller" data-carousel aria-label="Featured posts carousel">
      {items.map((entry: any, idx: number) => (
        <CarouselSlide entry={entry} index={idx} />
      ))}
    </div>

    {/* Navigation arrows */}
    <button class="nav-btn nav-prev" data-prev aria-label="Previous slide" type="button">
      <svg width="10" height="18" viewBox="0 0 10 18" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="M9 1L1 9L9 17" />
      </svg>
    </button>
    <button class="nav-btn nav-next" data-next aria-label="Next slide" type="button">
      <svg width="10" height="18" viewBox="0 0 10 18" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="M1 1L9 9L1 17" />
      </svg>
    </button>

    {/* Dots indicator */}
    <div class="dots-container">
      {items.map((_: any, idx: number) => (
        <button
          class="dot"
          data-dot
          data-dot-index={idx}
          aria-label={`Go to slide ${idx + 1}`}
          type="button"
        />
      ))}
    </div>
  </div>
</section>

<style>
  .hero-section {
    margin-top: 1rem;
  }

  .carousel-container {
    position: relative;
    overflow: hidden;
    border-radius: 0.75rem;
    background: #1a1a1a;
  }

  .carousel-scroller {
    display: flex;
    scroll-snap-type: x mandatory;
    overflow-x: auto;
    scrollbar-width: none;
    scroll-behavior: smooth;
  }
  .carousel-scroller::-webkit-scrollbar {
    display: none;
  }

  /* Use :global() for styles that need to be accessible by child components */
  :global(.carousel-slide) {
    position: relative;
    width: 100%;
    flex: none;
    scroll-snap-align: start;
    aspect-ratio: 16 / 9;
    min-height: 380px;
    max-height: 580px;
  }

  :global(.slide-link) {
    display: block;
    width: 100%;
    height: 100%;
    position: relative;
    text-decoration: none;
  }

  /* Image: full display, no cropping */
  :global(.slide-img) {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-position: center;
  }

  /* Mobile + Tablet: no cropping */
  @media (max-width: 1024px) {
    :global(.slide-img) {
      object-fit: contain;
      background: #111;
    }
  }

  /* Desktop: Hero visual, full-screen */
  @media (min-width: 1025px) {
    :global(.slide-img) {
      object-fit: cover;
    }
  }

  :global(.carousel-placeholder) {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
  }

  /* Caption bar - solid background at bottom */
  :global(.caption-bar) {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 1.25rem 1.75rem;
    padding-bottom: 3.5rem; /* space for dots */
    background: rgba(30, 30, 30, 0.92);
    text-align: center;
  }

  /* Title: large, elegant italic */
  :global(.caption-title) {
    margin: 0;
    font-family: 'Playfair Display', Georgia, 'Times New Roman', serif;
    font-size: clamp(1.4rem, calc(1rem + 1.5vw), 2.4rem);
    font-weight: 400;
    line-height: 1.25;
    color: #fff;
  }

  /* Meta: inline row with centered alignment, wrapped lines left-aligned */
  :global(.caption-meta) {
    margin-top: 0.6rem;
    display: inline-flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: flex-start;
    gap: 0.5rem;
    font-size: 0.88rem;
    color: rgba(255, 255, 255, 0.85);
    max-width: 100%;
  }

  :global(.meta-item) {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    flex-shrink: 0;
    white-space: nowrap;
    flex-grow: 0;
  }
  
  /* Ensure meta-links don't break - keep all links together */
  :global(.meta-item .meta-links) {
    display: inline-flex;
    flex-wrap: nowrap;
    align-items: center;
    gap: 0;
  }
  
  /* Keep each link as a single unit */
  :global(.meta-item .meta-links a) {
    white-space: nowrap;
    flex-shrink: 0;
  }

  :global(.meta-icon) {
    opacity: 0.9;
  }

  :global(.meta-label) {
    color: rgba(255, 255, 255, 0.7);
  }

  :global(.meta-links) {
    text-decoration: underline;
    text-underline-offset: 2px;
    text-decoration-color: rgba(255, 255, 255, 0.4);
  }

  :global(.meta-link) {
    color: inherit;
    text-decoration: inherit;
    transition: opacity 0.2s ease;
  }
  :global(.meta-link:hover) {
    opacity: 0.8;
    text-decoration-color: rgba(255, 255, 255, 0.7);
  }

  /* Navigation buttons */
  .nav-btn {
    position: absolute;
    top: calc(50% - 2rem);
    transform: translateY(-50%);
    width: 44px;
    height: 44px;
    border-radius: 50%;
    border: none;
    background: rgba(255, 255, 255, 0.15);
    color: rgba(255, 255, 255, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  .nav-btn:hover {
    background: rgba(255, 255, 255, 0.25);
    color: #fff;
  }
  .nav-prev {
    left: 0.75rem;
  }
  .nav-next {
    right: 0.75rem;
  }

  /* Dots */
  .dots-container {
    position: absolute;
    bottom: 1rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 0.5rem;
  }

  .dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    border: none;
    background: rgba(255, 255, 255, 0.4);
    cursor: pointer;
    transition: all 0.2s ease;
  }
  .dot:hover {
    background: rgba(255, 255, 255, 0.6);
  }
  .dot.active {
    background: #e74c3c;
  }

  /* Responsive */
  @media (max-width: 768px) {
    :global(.carousel-slide) {
      min-height: 280px;
      aspect-ratio: 4 / 3;
    }

    :global(.caption-bar) {
      padding: 1rem 1.25rem;
      padding-bottom: 3rem;
    }

    :global(.caption-title) {
      font-size: 1.2rem;
    }

    :global(.caption-meta) {
      font-size: 0.75rem;
      gap: 0.4rem;
    }

    .nav-btn {
      width: 36px;
      height: 36px;
    }
  }
</style>

<script>
  import { initHeroCarousel } from "./HeroCarousel.client";
  
  // Initialize carousel when DOM is ready
  if (import.meta.env.SSR === false) {
    // Initialize immediately if DOM is already loaded
    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", initHeroCarousel);
    } else {
      // Use setTimeout to ensure DOM is fully ready
      setTimeout(initHeroCarousel, 0);
    }
    
    // Also initialize on page transitions (Astro View Transitions)
    document.addEventListener("astro:page-load", initHeroCarousel);
  }
</script>
