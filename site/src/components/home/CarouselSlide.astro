---
/**
 * CarouselSlide - Individual slide component for HeroCarousel
 */

import { Picture } from "astro:assets";
import { getPathFromEntry } from "@/utils/getPath";
import { slugifyStr } from "@/utils/slugify";
import {
  coverOf,
  isImportedImage,
  authorOf,
  formatDate,
  topicsOf,
  categoriesOf,
  tagsOf,
  METADATA_LIMITS,
  getLimitedItems,
} from "./HeroCarousel.utils";

interface Props {
  entry: any;
  index: number;
}

const { entry, index } = Astro.props;

const author = authorOf(entry);
const date = formatDate(entry);

// Get metadata with Top-N limits
const allTopics = topicsOf(entry);
const allCategories = categoriesOf(entry);
const allTags = tagsOf(entry);

const { displayed: topics, overflowCount: topicsOverflow } = getLimitedItems(
  allTopics,
  METADATA_LIMITS.topics
);
const { displayed: categories, overflowCount: categoriesOverflow } = getLimitedItems(
  allCategories,
  METADATA_LIMITS.categories
);
const { displayed: tags, overflowCount: tagsOverflow } = getLimitedItems(
  allTags,
  METADATA_LIMITS.tags
);
---

<article class="carousel-slide" data-slide data-index={index}>
  <a href={getPathFromEntry(entry)} class="slide-link">
    {/* Background image - displays fully */}
    {entry.data?.ogImage ? (
      isImportedImage(entry.data.ogImage) ? (
        <Picture
          src={entry.data.ogImage}
          alt={entry.data?.title ?? entry.slug}
          class="slide-img"
          sizes="100vw"
          widths={[360, 480, 640, 768, 1024, 1280, 1536, 1920]}
          priority={index === 0}
        />
      ) : (
        <img
          src={coverOf(entry)}
          alt={entry.data?.title ?? entry.slug}
          class="slide-img"
          loading={index === 0 ? "eager" : "lazy"}
        />
      )
    ) : (
      <div class="carousel-placeholder" />
    )}
  </a>

  {/* Caption bar at bottom - outside slide-link to allow metadata links */}
  <div class="caption-bar">
    <a href={getPathFromEntry(entry)} class="title-link">
      <h2 class="caption-title">{entry.data?.title ?? entry.slug}</h2>
    </a>

    <div class="caption-meta">
        {/* Author and Date - inline items */}
        <div class="meta-row">
          {author && (
            <span class="meta-item-inline">
              <span class="meta-icon"></span>
              <span>{author}</span>
            </span>
          )}

          {date && (
            <span class="meta-item-inline">
              <span class="meta-label">Date :</span>
              <span>{date}</span>
            </span>
          )}
        </div>

        {/* Topics - Stacked Group */}
        {allTopics.length > 0 && (
          <div class="meta-group">
            <span class="meta-group-label">Topics:</span>
            <span class="meta-group-items">
              {topics.map((topic, idx) => [
                idx > 0 && <span class="meta-separator"> 路 </span>,
                <a
                  href={`/topics/${slugifyStr(topic)}/`}
                  class="meta-link"
                >
                  {topic}
                </a>
              ])}
              {topicsOverflow > 0 && (
                <>
                  {topics.length > 0 && <span class="meta-separator"> 路 </span>}
                  <a
                    href="/topics/"
                    class="meta-link meta-link-overflow"
                  >
                    +{topicsOverflow}
                  </a>
                </>
              )}
            </span>
          </div>
        )}

        {/* Categories - Stacked Group */}
        {allCategories.length > 0 && (
          <div class="meta-group">
            <span class="meta-group-label">Categories:</span>
            <span class="meta-group-items">
              {categories.map((cat, idx) => [
                idx > 0 && <span class="meta-separator"> 路 </span>,
                <a
                  href={`/categories/${slugifyStr(cat)}/`}
                  class="meta-link"
                >
                  {cat}
                </a>
              ])}
              {categoriesOverflow > 0 && (
                <>
                  {categories.length > 0 && <span class="meta-separator"> 路 </span>}
                  <a
                    href="/categories/"
                    class="meta-link meta-link-overflow"
                  >
                    +{categoriesOverflow}
                  </a>
                </>
              )}
            </span>
          </div>
        )}

        {/* Tags - Stacked Group */}
        {allTags.length > 0 && (
          <div class="meta-group">
            <span class="meta-group-label">Tags:</span>
            <span class="meta-group-items">
              {tags.map((tag, idx) => [
                idx > 0 && <span class="meta-separator"> 路 </span>,
                <a
                  href={`/tags/${slugifyStr(tag)}/`}
                  class="meta-link"
                >
                  {tag}
                </a>
              ])}
              {tagsOverflow > 0 && (
                <>
                  {tags.length > 0 && <span class="meta-separator"> 路 </span>}
                  <a
                    href="/tags/"
                    class="meta-link meta-link-overflow"
                  >
                    +{tagsOverflow}
                  </a>
                </>
              )}
            </span>
          </div>
        )}
      </div>
    </div>
</article>

<style>
  .carousel-slide {
    position: relative;
    width: 100%;
    flex: none;
    scroll-snap-align: start;
    aspect-ratio: 16 / 9;
    min-height: 380px;
    max-height: 580px;
  }

  .slide-link {
    display: block;
    width: 100%;
    height: 100%;
    position: relative;
    text-decoration: none;
  }

  /* Image: full display, no cropping */
  .slide-img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-position: center;
  }

  /* Mobile + Tablet: no cropping */
  @media (max-width: 1024px) {
    .slide-img {
      object-fit: contain;
      background: #111;
    }
  }

  /* Desktop: Hero visual, full-screen */
  @media (min-width: 1025px) {
    .slide-img {
      object-fit: cover;
    }
  }

  .carousel-placeholder {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
  }

  /* Caption bar - solid background at bottom */
  .caption-bar {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 1.25rem 1.75rem;
    padding-bottom: 3.5rem; /* space for dots */
    background: rgba(30, 30, 30, 0.92);
    text-align: center;
  }

  /* Title link */
  .title-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .title-link:hover .caption-title {
    opacity: 0.9;
  }

  /* Title: large, elegant italic */
  .caption-title {
    margin: 0;
    font-family: 'Playfair Display', Georgia, 'Times New Roman', serif;
    font-size: clamp(1.4rem, calc(1rem + 1.5vw), 2.4rem);
    font-weight: 400;
    line-height: 1.25;
    color: #fff;
    transition: opacity 0.2s ease;
  }

  /* Meta: Stacked Groups + Inline Items */
  .caption-meta {
    margin-top: 0.6rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.88rem;
    color: rgba(255, 255, 255, 0.85);
    max-width: 100%;
  }

  /* Inline row for author and date */
  .meta-row {
    display: inline-flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .meta-item-inline {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    white-space: nowrap;
  }

  /* Stacked group: each metadata type gets its own line */
  /* Each group is atomic - label and items stay together */
  .meta-group {
    display: inline-flex;
    flex-wrap: wrap;
    align-items: baseline;
    justify-content: center;
    gap: 0.4rem;
    /* Allow the entire group to wrap to next line if screen is too narrow */
    max-width: 100%;
  }

  /* Label - atomic with items, never breaks away */
  .meta-group-label {
    color: rgba(255, 255, 255, 0.7);
    white-space: nowrap;
    flex-shrink: 0;
    /* Label and items form an atomic unit */
  }

  /* Items container - allows wrapping within items only */
  /* Label stays on same line as first item */
  .meta-group-items {
    display: inline-flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0;
    /* Items can wrap to next line, but label stays with first line */
    min-width: 0;
  }

  /* Separator between items */
  .meta-separator {
    color: rgba(255, 255, 255, 0.5);
    margin: 0 0.15rem;
    user-select: none;
  }

  .meta-icon {
    opacity: 0.9;
  }

  .meta-label {
    color: rgba(255, 255, 255, 0.7);
  }

  .meta-link {
    color: inherit;
    text-decoration: underline;
    text-underline-offset: 2px;
    text-decoration-color: rgba(255, 255, 255, 0.4);
    transition: opacity 0.2s ease, text-decoration-color 0.2s ease;
    white-space: nowrap;
  }

  .meta-link:hover {
    opacity: 0.8;
    text-decoration-color: rgba(255, 255, 255, 0.7);
  }

  /* Overflow indicator - visually weaker */
  .meta-link-overflow {
    opacity: 0.7;
    font-size: 0.85em;
  }

  .meta-link-overflow:hover {
    opacity: 0.9;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .carousel-slide {
      min-height: 280px;
      aspect-ratio: 4 / 3;
    }

    .caption-bar {
      padding: 1rem 1.25rem;
      padding-bottom: 3rem;
    }

    .caption-title {
      font-size: 1.2rem;
    }

    .caption-meta {
      font-size: 0.75rem;
      gap: 0.35rem;
    }

    .meta-group {
      gap: 0.3rem;
    }

    .meta-separator {
      margin: 0 0.1rem;
    }
  }
</style>
