---
import Hr from "./Hr.astro";
import IconX from "@/assets/icons/IconX.svg";
import IconMoon from "@/assets/icons/IconMoon.svg";
import IconSearch from "@/assets/icons/IconSearch.svg";
import IconArchive from "@/assets/icons/IconArchive.svg";
import IconSunHigh from "@/assets/icons/IconSunHigh.svg";
import IconMenuDeep from "@/assets/icons/IconMenuDeep.svg";
import LinkButton from "./LinkButton.astro";
import { SITE } from "@/config";

const { pathname } = Astro.url;

// Remove trailing slash from current pathname if exists
const currentPath =
  pathname.endsWith("/") && pathname !== "/" ? pathname.slice(0, -1) : pathname;

const isActive = (path: string) => {
  const currentPathArray = currentPath.split("/").filter((p) => p.trim());
  const pathArray = path.split("/").filter((p) => p.trim());
  return currentPath === path || currentPathArray[0] === pathArray[0];
};

// Check if any Browse child page is active
const isBrowseActive = () => {
  return isActive("/topics") || isActive("/categories") || isActive("/tags");
};

// Check active state for Browse child items (strong active)
const isBrowseChildActive = (path: string) => {
  return isActive(path);
};
---

<header class="sticky top-0 z-50 border-b border-skin-line bg-background/80 backdrop-blur-md transition-all">
  <a
    id="skip-to-content"
    href="#main-content"
    class="absolute start-16 -top-full z-50 bg-background px-3 py-2 text-accent backdrop-blur-lg transition-all focus:top-4"
  >
    Skip to content
  </a>

  <div
    id="nav-container"
    class="mx-auto flex max-w-app flex-col items-center justify-between sm:flex-row"
  >
    <div
      id="top-nav-wrap"
      class="relative flex w-full items-baseline justify-between bg-background p-4 sm:items-center sm:py-6"
    >
      <a
        href="/"
        class="absolute py-1 text-xl leading-8 font-semibold whitespace-nowrap sm:static sm:my-auto sm:text-2xl sm:leading-none"
      >
        {SITE.title}
      </a>

      <nav
        id="nav-menu"
        class="flex w-full flex-col items-center sm:ms-2 sm:flex-row sm:justify-end sm:space-x-4 sm:py-0"
      >
        <button
          id="menu-btn"
          class="focus-outline self-end p-2 sm:hidden"
          aria-label="Open Menu"
          aria-expanded="false"
          aria-controls="menu-items"
        >
          <IconX id="close-icon" class="hidden" />
          <IconMenuDeep id="menu-icon" />
        </button>

        <ul
          id="menu-items"
          class:list={[
            "mt-4 grid w-44 grid-cols-2 place-content-center gap-2",
            "[&>li>a]:block [&>li>a]:px-4 [&>li>a]:py-3 [&>li>a]:text-center [&>li>a]:font-medium [&>li>a]:hover:text-accent sm:[&>li>a]:px-2 sm:[&>li>a]:py-1",
            "hidden",
            "sm:mt-0 sm:flex sm:w-auto sm:gap-x-5 sm:gap-y-0",
          ]}
        >
          <li class="col-span-2">
            <a href="/posts" class:list={{ "active-nav": isActive("/posts") }}>
              Posts
            </a>
          </li>

          <li class="col-span-2">
            <a href="/notes" class:list={{ "active-nav": isActive("/notes") }}>
              Notes
            </a>
          </li>

          <!-- Browse Dropdown (Desktop: dropdown, Mobile: accordion) -->
          <li class="col-span-2 browse-dropdown-container relative">
            <button
            id="browse-toggle"
            class:list={[
              // mobile
              "w-full font-medium px-4 py-3 flex items-center justify-center gap-2 text-center",
          
              // desktop (sm:)
              "sm:w-auto sm:px-2 sm:py-1 sm:justify-start sm:text-left",
          
              "hover:text-accent focus-outline",
              { "active-nav-weak": isBrowseActive() },
            ]}
            aria-expanded="false"
            aria-controls="browse-menu"
            aria-label="Browse menu"
          >
            <span>Browse</span>
          
            {/* Desktop chevron */}
            <svg
              id="browse-chevron-desktop"
              class="hidden sm:block size-3 transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"
              />
            </svg>
          
            {/* Mobile chevron */}
            <svg
              id="browse-chevron-mobile"
              class="block sm:hidden size-4 transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"
              />
            </svg>
            </button>
            <ul
              id="browse-menu"
              class:list={[
                "browse-dropdown hidden w-full sm:absolute sm:top-full sm:mt-1 sm:w-48 sm:rounded-lg sm:border sm:border-skin-line sm:bg-background sm:shadow-lg sm:backdrop-blur-md",
              ]}
            >
              <li>
                <a
                  href="/topics"
                  class:list={[
                    "block px-4 py-2 text-center font-medium hover:bg-skin-muted hover:text-accent sm:px-4 sm:py-2 sm:text-left",
                    { "active-nav": isBrowseChildActive("/topics") },
                  ]}
                >
                  Topics
                </a>
              </li>
              <li>
                <a
                  href="/categories"
                  class:list={[
                    "block px-4 py-2 text-center font-medium hover:bg-skin-muted hover:text-accent sm:px-4 sm:py-2 sm:text-left",
                    { "active-nav": isBrowseChildActive("/categories") },
                  ]}
                >
                  Categories
                </a>
              </li>
              <li>
                <a
                  href="/tags"
                  class:list={[
                    "block px-4 py-2 text-center font-medium hover:bg-skin-muted hover:text-accent sm:px-4 sm:py-2 sm:text-left",
                    { "active-nav": isBrowseChildActive("/tags") },
                  ]}
                >
                  Tags
                </a>
              </li>
            </ul>
          </li>

          <li class="col-span-2">
            <a href="/about" class:list={{ "active-nav": isActive("/about") }}>
              About
            </a>
          </li>

          {
            SITE.showArchives && (
              <li class="col-span-2">
                <LinkButton
                  href="/archives"
                  class:list={[
                    "focus-outline flex justify-center p-3 sm:p-1",
                    {
                      "active-nav [&>svg]:stroke-accent": isActive("/archives"),
                    },
                  ]}
                  ariaLabel="archives"
                  title="Archives"
                >
                  <IconArchive class="hidden sm:inline-block" />
                  <span class="sm:sr-only">Archives</span>
                </LinkButton>
              </li>
            )
          }

          <li class="col-span-1 flex items-center justify-center">
            <LinkButton
              href="/search"
              class:list={[
                "focus-outline flex p-3 sm:p-1",
                { "[&>svg]:stroke-accent": isActive("/search") },
              ]}
              ariaLabel="search"
              title="Search"
            >
              <IconSearch />
              <span class="sr-only">Search</span>
            </LinkButton>
          </li>

          {
            SITE.lightAndDarkMode && (
              <li class="col-span-1 flex items-center justify-center">
                <button
                  id="theme-btn"
                  class="focus-outline relative size-12 p-4 sm:size-8 hover:[&>svg]:stroke-accent"
                  title="Toggles light & dark"
                  aria-label="auto"
                  aria-live="polite"
                >
                  <IconMoon class="absolute top-[50%] left-[50%] -translate-[50%] scale-100 rotate-0 transition-all dark:scale-0 dark:-rotate-90" />
                  <IconSunHigh class="absolute top-[50%] left-[50%] -translate-[50%] scale-0 rotate-90 transition-all dark:scale-100 dark:rotate-0" />
                </button>
              </li>
            )
          }
        </ul>
      </nav>
    </div>
  </div>

  <Hr />
</header>

<script>
  function toggleNav() {
    const menuBtn = document.querySelector("#menu-btn") as HTMLButtonElement | null;
    const menuItems = document.querySelector("#menu-items") as HTMLUListElement | null;
    const menuIcon = document.querySelector("#menu-icon") as SVGElement | null;
    const closeIcon = document.querySelector("#close-icon") as SVGElement | null;

    if (!menuBtn || !menuItems || !menuIcon || !closeIcon) return;

    // Hard cleanup to ensure no stale scroll-lock styles remain.
    const hardUnlockScroll = () => {
      document.body.style.position = "";
      document.body.style.top = "";
      document.body.style.left = "";
      document.body.style.right = "";
      document.body.style.width = "";
      document.body.style.paddingRight = "";
      delete document.body.dataset.scrollY;
      delete document.body.dataset.prevPaddingRight;
    };

    // Always start from a clean baseline.
    hardUnlockScroll();

    let savedScrollY = 0;

    const lockScroll = () => {
      // Only apply scroll lock on mobile.
      if (window.matchMedia("(min-width: 640px)").matches) return;

      savedScrollY = window.scrollY || 0;

      // Compensate scrollbar width to avoid layout shift.
      const scrollbarWidth =
        window.innerWidth - document.documentElement.clientWidth;
      if (scrollbarWidth > 0) {
        document.body.dataset.prevPaddingRight =
          document.body.style.paddingRight || "";
        document.body.style.paddingRight = `${scrollbarWidth}px`;
      }

      document.body.dataset.scrollY = String(savedScrollY);
      document.body.style.position = "fixed";
      document.body.style.top = `-${savedScrollY}px`;
      document.body.style.left = "0";
      document.body.style.right = "0";
      document.body.style.width = "100%";
    };

    const unlockScroll = () => {
      const y = Number(document.body.dataset.scrollY || "0");

      document.body.style.position = "";
      document.body.style.top = "";
      document.body.style.left = "";
      document.body.style.right = "";
      document.body.style.width = "";

      if ("prevPaddingRight" in document.body.dataset) {
        document.body.style.paddingRight =
          document.body.dataset.prevPaddingRight || "";
        delete document.body.dataset.prevPaddingRight;
      } else {
        document.body.style.paddingRight = "";
      }

      delete document.body.dataset.scrollY;
      window.scrollTo(0, y);
    };

    const setOpen = (open: boolean) => {
      menuBtn.setAttribute("aria-expanded", open ? "true" : "false");
      menuBtn.setAttribute("aria-label", open ? "Close Menu" : "Open Menu");

      menuItems.classList.toggle("hidden", !open);
      menuIcon.classList.toggle("hidden", open);
      closeIcon.classList.toggle("hidden", !open);

      if (open) lockScroll();
      else unlockScroll();
    };

    // Prevent duplicate event bindings after Astro view transitions.
    if (menuBtn.dataset.bound === "1") return;
    menuBtn.dataset.bound = "1";

    menuBtn.addEventListener("click", () => {
      const isOpen = menuBtn.getAttribute("aria-expanded") === "true";
      setOpen(!isOpen);
    });

    // Close menu when any item inside is clicked (mobile UX).
    // Use event delegation to handle dynamically shown/hidden items like Browse dropdown
    menuItems.addEventListener("click", (e) => {
      const target = e.target as HTMLElement;
      // Close menu if clicking on a link (including Browse dropdown items)
      if (target.tagName === "A") {
        const isOpen = menuBtn.getAttribute("aria-expanded") === "true";
        if (isOpen && !window.matchMedia("(min-width: 640px)").matches) {
          setOpen(false);
        }
      }
    });

    // Safety: unlock scroll if switching to desktop while menu is open.
    window.addEventListener("resize", () => {
      const isDesktop = window.matchMedia("(min-width: 640px)").matches;
      const isOpen = menuBtn.getAttribute("aria-expanded") === "true";
      if (isDesktop && isOpen) {
        unlockScroll();
      }
    });

    // Ensure scroll is restored before Astro swaps the page.
    document.addEventListener("astro:before-swap", () => {
      unlockScroll();
      hardUnlockScroll();
    });
  }

  toggleNav();

  // Re-bind after Astro view transitions.
  document.addEventListener("astro:after-swap", () => {
    toggleNav();
  });

  // Browse dropdown functionality
  function initBrowseDropdown() {
    const browseToggle = document.querySelector("#browse-toggle") as HTMLButtonElement | null;
    const browseMenu = document.querySelector("#browse-menu") as HTMLUListElement | null;
    const browseChevronDesktop = document.querySelector("#browse-chevron-desktop") as SVGElement | null;
    const browseChevronMobile = document.querySelector("#browse-chevron-mobile") as SVGElement | null;

    if (!browseToggle || !browseMenu) return;

    const isMobile = () => window.matchMedia("(max-width: 639px)").matches;

    const setOpen = (open: boolean) => {
      browseToggle.setAttribute("aria-expanded", open ? "true" : "false");
      browseMenu.classList.toggle("hidden", !open);
      if (browseChevronDesktop) {
        browseChevronDesktop.style.transform = open ? "rotate(180deg)" : "rotate(0deg)";
      }
      if (browseChevronMobile) {
        browseChevronMobile.style.transform = open ? "rotate(180deg)" : "rotate(0deg)";
      }
    };

    // Prevent duplicate event bindings after Astro view transitions.
    if (browseToggle.dataset.bound === "1") return;
    browseToggle.dataset.bound = "1";

    // Desktop: hover behavior
    let hoverTimeout: number | null = null;
    const container = browseToggle.closest(".browse-dropdown-container") as HTMLElement;

    if (container) {
      container.addEventListener("mouseenter", () => {
        if (!isMobile()) {
          if (hoverTimeout) clearTimeout(hoverTimeout);
          setOpen(true);
        }
      });

      container.addEventListener("mouseleave", () => {
        if (!isMobile()) {
          hoverTimeout = window.setTimeout(() => {
            setOpen(false);
          }, 150);
        }
      });
    }

    // Click behavior (works for both desktop and mobile)
    browseToggle.addEventListener("click", (e) => {
      e.preventDefault();
      e.stopPropagation();
      const isOpen = browseToggle.getAttribute("aria-expanded") === "true";
      setOpen(!isOpen);
    });

    // Close on click outside
    document.addEventListener("click", (e) => {
      if (!container?.contains(e.target as Node)) {
        setOpen(false);
      }
    });

    // Close on Escape key
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && browseToggle.getAttribute("aria-expanded") === "true") {
        setOpen(false);
        browseToggle.focus();
      }
    });

    // Close dropdown items on mobile after click (accordion collapses)
    browseMenu.querySelectorAll("a").forEach((link) => {
      link.addEventListener("click", () => {
        if (isMobile()) {
          // Close the Browse accordion on mobile
          setOpen(false);
        }
      });
    });

    // Handle resize (close dropdown if switching to desktop)
    window.addEventListener("resize", () => {
      if (!isMobile()) {
        // Desktop hover will handle opening
      } else {
        // Mobile: ensure it's closed on resize
        setOpen(false);
      }
    });
  }

  initBrowseDropdown();

  // Re-bind after Astro view transitions.
  document.addEventListener("astro:after-swap", () => {
    initBrowseDropdown();
  });
</script>